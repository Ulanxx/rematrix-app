generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  DRAFT
  WAITING_APPROVAL
  RUNNING
  FAILED
  COMPLETED
  CANCELED
}

enum JobStage {
  PLAN
  OUTLINE
  STORYBOARD
  SCRIPT
  THEME_DESIGN
  PAGES
  TTS
  RENDER
  MERGE
  DONE
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ArtifactType {
  JSON
  MARKDOWN
  TEXT
  AUDIO
  IMAGE
  VIDEO
  SUBTITLES
}

model Job {
  id           String    @id @default(uuid())
  userId       String?
  status       JobStatus @default(DRAFT)
  currentStage JobStage  @default(PLAN)
  autoMode     Boolean   @default(false)
  retryCount   Int       @default(0)

  config      Json?
  stageStatus Json?
  error       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  artifacts    Artifact[]
  approvals    Approval[]
  chatMessages ChatMessage[]
  workflowCommands WorkflowCommand[]

  @@index([userId])
  @@index([status])
  @@index([currentStage])
  @@index([autoMode])
}

model Artifact {
  id      String     @id @default(uuid())
  jobId   String
  job     Job        @relation(fields: [jobId], references: [id], onDelete: Cascade)
  stage   JobStage
  type    ArtifactType
  version Int        @default(1)

  content Json?
  blobUrl String?
  meta    Json?

  createdBy String? // user/system
  createdAt DateTime @default(now())

  @@unique([jobId, stage, type, version])
  @@index([jobId, stage])
}

model Approval {
  id     String         @id @default(uuid())
  jobId  String
  job    Job            @relation(fields: [jobId], references: [id], onDelete: Cascade)
  stage  JobStage

  status  ApprovalStatus @default(PENDING)
  comment String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([jobId, stage])
  @@index([jobId, status])
}

model ChatMessage {
  id        String   @id @default(uuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  role      String   // 'user' | 'assistant'
  content   String
  metadata  Json?    // 用于区分普通消息与 approval_request 等

  createdAt DateTime @default(now())

  @@index([jobId, createdAt])
}

model WorkflowCommand {
  id        String   @id @default(uuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  command   String   // run, pause, resume, jump-to, modify-stage
  params    Json?    // 指令参数，如 { stage: "OUTLINE" }
  status    String   @default("PENDING") // PENDING, EXECUTING, SUCCESS, FAILED
  result    Json?    // 执行结果
  error     String?  // 错误信息

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([jobId, createdAt])
  @@index([jobId, status])
}

model PromptStageConfig {
  id    String   @id @default(uuid())
  stage JobStage

  model       String
  temperature Float?
  prompt      String

  tools  Json?
  schema Json?
  meta   Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activeFor PromptStageActive[] @relation("PromptStageActiveConfig")

  @@index([stage])
  @@index([stage, updatedAt])
}

model PromptStageActive {
  stage          JobStage @id
  activeConfigId String
  activeConfig   PromptStageConfig @relation("PromptStageActiveConfig", fields: [activeConfigId], references: [id], onDelete: Restrict)

  updatedAt DateTime @updatedAt
}
